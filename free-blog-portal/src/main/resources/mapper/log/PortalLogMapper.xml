<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.core.log.dao.PortalLogMapper">

    <select id="selectLogByPage" parameterType="com.blog.core.log.entity.dto.PortalLogQueryDTO"
            resultType="com.blog.core.log.entity.vo.PortalLogVO">
        SELECT
            log.id,
            log.operation,
            log.request_method,
            log.request_path,
            log.method_name,
            log.ip_address,
            log.operating_time,
            log.result_type,
            log.result_operation,
            log.time_consuming,
            log.operating_id,
            user.user_name operatingUserName
        FROM
            portal_log log
            LEFT JOIN sys_base_user user on log.operating_id = user.id
        ORDER BY log.operating_time DESC
        <where>
            <if test="resultType != null ">
                result_type = #{resultType}
            </if>
        </where>
    </select>

    <insert id="saveLog" parameterType="com.blog.core.log.entity.vo.PortalLogVO">
       INSERT INTO portal_log
       (id,operation,request_method,request_path,method_name,ip_address,operating_time,result_type,result_operation,time_consuming,operating_id)
       VALUES
       (#{id},#{operation},#{requestMethod},#{requestPath},#{methodName},#{ipAddress},#{operatingTime},#{resultType},#{resultOperation},#{timeConsuming},#{operatingId})
    </insert>
</mapper>
