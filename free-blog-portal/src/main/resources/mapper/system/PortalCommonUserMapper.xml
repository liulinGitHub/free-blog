<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.core.system.user.dao.PortalCommonUserMapper">

    <select id="selectPortalCommonUserByUserId" parameterType="java.lang.String"
            resultType="com.blog.core.system.user.entity.PortalCommonUser">
        SELECT
            user_id userId,
            nick_name nickName,
            avatar avatar
        FROM
            portal_user
        WHERE
            user_id = #{userId}
        AND
            enable = '1'
    </select>
</mapper>
