<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.core.system.user.dao.PortalUserMapper">

    <select id="selectUserInfoByUserId" parameterType="java.lang.String" resultType="com.blog.core.system.user.vo.PortalUserInfoVO">
        SELECT
            user_id userId,
            user_name userName,
            nick_name nickName,
            avatar avatar,
            telephone telephone,
            email,
            signature,
            gender
        FROM
            portal_user
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </where>
    </select>

    <select id="selectUserByUserName" resultType="com.blog.core.system.user.vo.PortalUserInfoVO" parameterType="java.lang.String">
        SELECT
            user_id userId,
            user_name userName,
            nick_name nickName,
            avatar avatar,
            telephone telephone,
            email,
            signature,
            gender
        FROM
            portal_user
        WHERE
            user_name= #{userName}
    </select>

</mapper>
